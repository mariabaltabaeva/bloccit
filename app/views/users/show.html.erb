<div class="row">
  <div class="col-md-8">
    <div class="media">
      <br />
      <% avatar_url = @user.avatar_url(128) %>
      <% if avatar_url %>
      <div class="media-left">
        <%= image_tag avatar_url, class: 'media-object' %>
      </div>
      <% end %>
      <div class="media-body">
        <h2 class="media-heading"><%= @user.name %></h2>
        <small>
          <%= pluralize(@user.posts.count, 'post') %>,
          <%= pluralize(@user.comments.count, 'comment') %>
        </small>
      </div>
    </div>
  </div>
</div>

<h2>Posts</h2>
<% if user_has_posts?(current_user) %>
<%= render @user.posts %>
<% else %>
<p>User has no posts</p>
<% end %>


<h2>Comments</h2>
<% if user_has_comments?(current_user) %>
<%= render @user.comments %>
<% else %>
<p>User has no comments</p>
<% end %>

<h2> Favorited Posts</h2>
<% @favorite_posts.each do |post| %>
 <div class="media">
   <div class="media-left">
     <%= image_tag(post.user.avatar_url(64), class: 'media-object') %>
   </div>
    <div class="media-body">
      <h4 class="media-heading">
        <%= link_to post.title, topic_post_path(post.topic, post) %>
      </h4>
      <p><%= post.body %></p>
      <small><%= pluralize(post.votes.size, 'vote') %></small>
      <small><%= pluralize(post.comments.size, 'comment') %></small>
    </div>
  </div>
<% end %>
